{
  "compilerOptions": {
      "module": "es2022",
      "esModuleInterop": true,
      "target": "es2022",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}
